openapi: 3.0.3
info:
  title: ''
  version: 0.0.0
paths:
  /api/accept_friend_request/:
    post:
      operationId: api_accept_friend_request_create
      description: Accept a friend request
      tags:
      - api
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
        required: true
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/SuccessResponse'
          description: ''
        '400':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
        '404':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
  /api/cancel_request/:
    post:
      operationId: api_cancel_request_create
      description: Cancel a friend request
      tags:
      - api
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
        required: true
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/SuccessResponse'
          description: ''
        '400':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
        '404':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
  /api/create_chat/:
    post:
      operationId: api_create_chat_create
      description: Create a chat with a list of users
      tags:
      - api
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ChatUsersMinimal'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/ChatUsersMinimal'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/ChatUsersMinimal'
        required: true
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/SuccessResponse'
          description: ''
        '400':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
        '404':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
  /api/get_chat_data/:
    get:
      operationId: api_get_chat_data_retrieve
      description: Get chat data for a specific chat
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatData'
          description: ''
  /api/get_chat_data/{chat_id}/:
    get:
      operationId: api_get_chat_data_retrieve_2
      description: Get chat data for a specific chat
      parameters:
      - in: path
        name: chat_id
        schema:
          type: integer
        required: true
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatData'
          description: ''
  /api/get_chats_with_history/:
    get:
      operationId: api_get_chats_with_history_retrieve
      description: Get users chats with recent messages
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatsWithHistory'
          description: ''
  /api/get_friend_data/:
    get:
      operationId: api_get_friend_data_retrieve
      description: Get friends and invites/requests sorted by category
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/FriendData'
          description: ''
  /api/get_messages/{chat_id}/:
    get:
      operationId: api_get_messages_list
      description: Get messages between start_msg_number (inclusive) and end_msg_number
        (non-inclusive) for the chat with id chat_id
      parameters:
      - in: path
        name: chat_id
        schema:
          type: integer
        description: The id of the chat to get messages for
        required: true
      - in: query
        name: end_msg_number
        schema:
          type: integer
        description: The end message number to get messages for
      - in: query
        name: start_msg_number
        schema:
          type: integer
        description: The start message number to get messages for
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Message'
          description: ''
        '400':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
        '404':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
  /api/get_user_info/:
    get:
      operationId: api_get_user_info_retrieve
      description: Get user info
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatUser'
          description: ''
  /api/reject_friend_request/:
    post:
      operationId: api_reject_friend_request_create
      description: Reject a friend request
      tags:
      - api
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
        required: true
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/SuccessResponse'
          description: ''
        '400':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
        '404':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
  /api/requestable_users/:
    get:
      operationId: api_requestable_users_retrieve
      description: Get users that can be requested by the current user
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatUsersMinimal'
          description: ''
  /api/schema/:
    get:
      operationId: api_schema_retrieve
      description: |-
        OpenApi3 schema for this API. Format can be selected via content negotiation.

        - YAML: application/vnd.oai.openapi
        - JSON: application/vnd.oai.openapi+json
      parameters:
      - in: query
        name: format
        schema:
          type: string
          enum:
