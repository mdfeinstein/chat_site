  /api/send_message/{chat_id}/:
    post:
      operationId: api_send_message_create
      description: Send a message to a chat
      parameters:
      - in: path
        name: chat_id
        schema:
          type: integer
        description: The id of the chat to send the message to
        required: true
      tags:
      - api
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/NewMessage'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/NewMessage'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/NewMessage'
        required: true
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/SuccessResponse'
          description: ''
        '400':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
        '404':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
  /api/send_request/:
    post:
      operationId: api_send_request_create
      description: Send a friend request
      tags:
      - api
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/ChatUserMinimal'
        required: true
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/SuccessResponse'
          description: ''
        '400':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
        '404':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ErrorResponse'
          description: ''
components:
  schemas:
    ChatData:
      type: object
      properties:
        chat_id:
          type: integer
        chat_name:
          type: string
        messages:
          type: array
          items:
            $ref: '#/components/schemas/Message'
      required:
      - chat_id
      - chat_name
      - messages
    ChatUser:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        username:
          type: string
        loggedIn:
          type: boolean
        accountActive:
          type: boolean
      required:
      - id
      - username
    ChatUserMinimal:
      type: object
      properties:
        username:
          type: string
      required:
      - username
    ChatUsersMinimal:
      type: object
      properties:
        usernames:
          type: array
          items:
            type: string
      required:
      - usernames
    ChatWithHistory:
      type: object
      properties:
        chat_id:
          type: integer
        chat_name:
          type: string
        last_messages:
          type: array
          items:
            $ref: '#/components/schemas/Message'
      required:
      - chat_id
      - chat_name
      - last_messages
    ChatsWithHistory:
      type: object
      properties:
        chats:
          type: array
          items:
            $ref: '#/components/schemas/ChatWithHistory'
      required:
      - chats
    ErrorResponse:
      type: object
      properties:
        success:
          type: boolean
          default: false
        message:
          type: string
      required:
      - message
    FriendData:
      type: object
      properties:
        online_friends:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
        offline_friends:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
        requested_users:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
        invited_by:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
      required:
      - invited_by
      - offline_friends
      - online_friends
      - requested_users
    Message:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        sender:
          type: string
          readOnly: true
        createdAt:
          type: string
          format: date-time
          readOnly: true
        text:
          type: string
        messageNumber:
          type: integer
          readOnly: true
      required:
      - createdAt
      - id
      - messageNumber
      - sender
      - text
    NewMessage:
      type: object
      properties:
        text:
          type: string
      required:
      - text
    SuccessResponse:
      type: object
      properties:
        success:
          type: boolean
          default: true
        message:
          type: string
      required:
      - message
  securitySchemes:
    basicAuth:
      type: http
      scheme: basic
    cookieAuth:
      type: apiKey
      in: cookie
      name: sessionid
