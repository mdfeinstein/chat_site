  title: ''
  version: 0.0.0
paths:
  /api/get_chat_data/:
    get:
      operationId: api_get_chat_data_retrieve
      description: Get chat data for a specific chat
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatData'
          description: ''
  /api/get_chat_data/{chat_id}/:
    get:
      operationId: api_get_chat_data_retrieve_2
      description: Get chat data for a specific chat
      parameters:
      - in: path
        name: chat_id
        schema:
          type: integer
        required: true
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatData'
          description: ''
  /api/get_chats_with_history/:
    get:
      operationId: api_get_chats_with_history_retrieve
      description: Get users chats with recent messages
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ChatsWithHistory'
          description: ''
  /api/get_friend_data/:
    get:
      operationId: api_get_friend_data_retrieve
      description: Get friends and invites/requests sorted by category
      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
