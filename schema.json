components:
  schemas:
    ChatData:
      type: object
      properties:
        chat_id:
          type: integer
        chat_name:
          type: string
        messages:
          type: array
          items:
            $ref: '#/components/schemas/Message'
      required:
      - chat_id
      - chat_name
      - messages
    ChatUser:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        user:
          type: integer
        loggedIn:
          type: boolean
        accountActive:
          type: boolean
      required:
      - id
      - user
    ChatWithHistory:
      type: object
      properties:
        chat_id:
          type: integer
        chat_name:
          type: string
        last_messages:
          type: array
          items:
            $ref: '#/components/schemas/Message'
      required:
      - chat_id
      - chat_name
      - last_messages
    ChatsWithHistory:
      type: object
      properties:
        chats:
          type: array
          items:
            $ref: '#/components/schemas/ChatWithHistory'
      required:
      - chats
    FriendData:
      type: object
      properties:
        online_friends:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
        offline_friends:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
        requested_users:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
        invited_by:
          type: array
          items:
            $ref: '#/components/schemas/ChatUser'
      required:
      - invited_by
      - offline_friends
      - online_friends
      - requested_users
    Message:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        sender:
          type: string
          readOnly: true
        createdAt:
          type: string
          format: date-time
          readOnly: true
        text:
          type: string
        messageNumber:
          type: integer
          readOnly: true
      required:
      - createdAt
      - id
      - messageNumber
      - sender
      - text
  securitySchemes:
    basicAuth:
      type: http
      scheme: basic
    cookieAuth:
      type: apiKey
      in: cookie
      name: sessionid
